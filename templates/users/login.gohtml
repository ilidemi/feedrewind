{{template "layouts/login_signup" .}}

{{define "content"}}
<div class="flex flex-col gap-6">
  <div class="flex flex-row justify-center">
    <a href="/" class="hover:cursor-pointer">
      <img src="{{static "logo_icon.svg"}}" class="w-12" alt="Logo">
    </a>
  </div>
  <div class="text-2xl text-center">Sign in to FeedRewind</div>

  <form id="{{.FormId}}" novalidate="novalidate" action="/login" accept-charset="UTF-8" method="post">
    {{.Session.CSRFField}}
    <div class="flex flex-col gap-2">
      {{if .Error}}
        <div class="bg-red-100 text-red-800 rounded-md w-full p-3 mb-5">
          {{.Error}}
        </div>
      {{end}}

      <div class="flex flex-col gap-1">
        <label for="email">Email</label>
        <div class="flex flex-col">
          <input
            type="email"
            name="email"
            id="{{.EmailInputId}}"
            placeholder="your@email.com"
            class="rounded-md border border-gray-300 placeholder:text-gray-400"
            autocomplete="username"
            required="required"
          >
          <span id="{{.EmailErrorId}}"
                class="invisible self-end text-sm font-semibold text-red-600"
                aria-live="polite"
          >
            No error
          </span>
        </div>
      </div>
      <div class="flex flex-col gap-1">
        <label for="current-password">Password</label>
        <div class="flex flex-col">
          <input
            type="password"
            name="current-password"
            id="{{.PasswordInputId}}"
            placeholder="correct horse battery staple"
            class="rounded-md border border-gray-300 placeholder:text-gray-400"
            autocomplete="current-password"
            required="required"
          >
          <span id="{{.PasswordErrorId}}"
                class="invisible self-end text-sm font-semibold text-red-600"
                aria-live="polite"
          >
            No error
          </span>
        </div>
      </div>
      <input type="hidden" name="redirect" id="redirect" value="{{.Redirect}}">
      <input type="submit" name="commit" value="Sign in" class="btn" data-disable-with="Sign in">
    </div>
  </form>

  {{template "partial_validation" .}}

  <div class="flex flex-col gap-5">
    <div class="text-sm text-gray-500 text-center">
      Need an account?
      <a class="btn-secondary" href="/signup">Sign up</a>
    </div>

    <div class="text-sm text-gray-500 text-center">
      Forgot your password?
      <a href="/support" class="underline decoration-from-font hover:cursor-pointer">Contact support</a>
    </div>
  </div>
</div>
{{end}}