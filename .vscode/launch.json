    "version": "0.2.0",
    "configurations": [
        {
            "name": "Web",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": ".",
            "args": ["web"]
        },
        {
            "name": "Worker",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": ".",
            "args": ["worker"]
        },
        {
            "name": "Crawl one",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": ".",
            "args": ["crawl"]
        },
        {
            "name": "Crawl one with JS",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": ".",
            "args": ["crawl", "--allow-js"]
        },
        {
            "name": "Crawl all",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": ".",
            "args": ["crawl", "all"]
        },
        {
            "name": "HN1000 - find feeds",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "./cmd/hn1000",
            "cwd": "cmd/hn1000",
            "args": ["find-feeds"]
        },
        {
            "name": "Test current package",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${relativeFileDirname}",
            "buildFlags": "-tags testing,e2etesting,stripetesting",
            "args": ["-test.run", ".*"]
        },
        {
            "name": "Run selected test",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${relativeFileDirname}",
            "buildFlags": "-tags testing,e2etesting,stripetesting",
            "args": ["-test.run", "${selectedText}"]
        }
    ]
}