{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Web",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "."
        },
        {
            "name": "Worker",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": ".",
            "args": ["worker"]
        },
        {
            "name": "Crawl one",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": ".",
            "args": ["crawl"]
        },
        {
            "name": "Crawl one with JS",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": ".",
            "args": ["crawl", "--allow-js"]
        },
        {
            "name": "Crawl all",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": ".",
            "args": ["crawl", "all"]
        },
        {
            "name": "Test current package",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${relativeFileDirname}",
            "buildFlags": "-tags testing,e2etesting",
            "args": ["-test.run", ".*"]
        }
    ]
}